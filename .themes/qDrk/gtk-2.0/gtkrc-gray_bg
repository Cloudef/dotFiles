		border          = { 3, 3, 3, 3 }
		stretch         = TRUE
	}
   	image
	{
       		function        = BOX
		recolorable     = TRUE
		state		= PRELIGHT
		file            = "ProgressBar/progress.png"
		border          = { 3, 3, 3, 3 }
		stretch         = TRUE
	}
	image
      	{
	       	function       	= BOX
		recolorable     = TRUE
		state		= ACTIVE
		file		= "ProgressBar/progress.png"
		border          = { 3, 3, 3, 3 }
		stretch         = TRUE
	}
	image
 	{
       		function        = BOX
 		recolorable     = TRUE
		state		= SELECTED
		file		= "ProgressBar/progress.png"
		border          = { 3, 3, 3, 3 }
		stretch         = TRUE
   	}
    }   
