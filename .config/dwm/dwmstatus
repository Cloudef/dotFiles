#!/bin/bash
# DWM Status

ICON="$HOME/.icons/dwm"
FONT="erusfont:7"
DZEN_BG="#161616"
DZEN_FG="#9d9d9d"
DZEN_FG2="#444444"
DZEN_W="230"
DZEN_H="13"
DZEN_X="1210"
DZEN_Y="120"
GFX_FG="#04c656"
GFX_BG="#363636"
CRIT="#FF6600"
GFX_H="9"
GFX_W="65"

OLDVOL=0
NEWVOL=0
SLEEP_TIMEOUT=0

INTERVAL="1"

printVolume()
{
   # ALSA
   Perc=$(amixer get Master | grep "Mono:" | awk '{print $4}' | tr -d '[]%')
   Mute=$(amixer get Master | grep "Mono:" | awk '{print $6}')

   # OSSv4
   # Perc=$(echo "$(ossmix | grep 'vmix0-outvol' | sed -n 's/.*(currently \(.*\) dB)/\1/p') * 100 / 25.0" | bc)
   # Mute=""; [ "$Perc" != "0" ] || Mute="[off]"

   echo -n " ^fg($DZEN_FG2)^i($ICON/spkr_01.xbm) "

   if [[ $Mute == "[off]" ]]; then
      echo -n "$(echo $Perc | gdbar \
      -fg $CRIT -bg $GFX_BG -h $GFX_H -w $GFX_W -s o -ss 1 -sw 2 -nonl) "
      echo -n " ^fg()off "
   else
      echo -n "$(echo $Perc | gdbar \
      -fg $GFX_FG -bg $GFX_BG -h $GFX_H -w $GFX_W -s o -ss 1 -sw 2 -nonl) "
      printf "^fg()%4s " "$Perc%"
   fi

   NEWVOL=$Perc
   return
}

printTime()
{
   echo -n " ^fg()$(date '+^fg()%a %d/%m ^fg(#44ddff)%H:%M') "
   return
}

printSep()
{
   echo -n "^fg($DZEN_FG2)|"
   return
}

printBar()
{
   while true
   do
      printSep
      printVolume
      printSep
      printTime

      echo

      # More reactive volume control
      [ $OLDVOL -eq $NEWVOL ]  || SLEEP_TIMEOUT=100
      [ $SLEEP_TIMEOUT -gt 0 ] && ((SLEEP_TIMEOUT--)) || sleep $INTERVAL
      OLDVOL=$NEWVOL
   done
   return
}

printBar | dzen2 -x $DZEN_X -y $DZEN_Y -w $DZEN_W -h $DZEN_H -fn $FONTÂ \
                 -ta 'r' -bg $DZEN_BG -fg $DZEN_FG -p -e ''
