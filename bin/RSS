#!/bin/sh

PIDFILE="/tmp/RSS.pid"
if [ -e "$PIDFILE" ]; then
   PID="$(cat "$PIDFILE")"
   if kill -0 $PID; then
      echo "Already running"
      exit 1
   else
      rm "$PIDFILE"
   fi
fi

if [ ! -e "$PIDFILE" ]; then
   urxvt -title SnowNews -name SnowNews -e snownews &
   echo "$!" > "$PIDFILE"
   sleep 3 && transset-df --no-regex -n SnowNews --dec 0.1
fi
