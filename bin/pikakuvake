#!/bin/sh
# Shortcut

if [[ ! "$1" ]]; then
   echo "Usage: pikakuvake <application>"
   exit
fi

DIR=`dirname  "$1"`
BIN=`basename "$1"`
shift; cd "$DIR"

if [[ $(file "$BIN" --mime-type | grep "application/x-dosexec") ]];
then
   export WINEDEBUG=-all
   wine "$BIN" "$@"
else
   ./"$BIN" \"$@\"
fi
