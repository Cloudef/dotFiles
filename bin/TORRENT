#!/bin/sh

PIDFILE="/tmp/TORRENT.pid"
if [ -e "$PIDFILE" ]; then
   PID=`cat "$PIDFILE"`
   if kill -0 &>1 > /dev/null $PID; then
      echo "Already running"
      exit 1
   else
      rm "$PIDFILE"
   fi
fi

if [ ! -e "$PIDFILE" ]; then
   urxvt -title rTorrent -name rTorrent -e rtorrent &
   echo "$!" > "$PIDFILE"
fi
