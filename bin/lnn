#!/bin/sh
# Thunar custom actions suck big time.
# Using this to workaround the quoting.
# Should really create own file manager

# Creates symbolic link to the same
# directory as target

[[ "$1" ]]  || exit
[ -f "$1" ] || exit

folder=$(dirname "$1")
file=$(basename "$1")
ln -s "$1" "${folder}/${file} (link)"
