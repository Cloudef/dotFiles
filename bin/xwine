#!/bin/sh
# Run application for certain directory
# Usually used for wine applications

if [ ! "$1" ]; then
	echo "Usage : xwine [gameDir] [exe]"
	exit
fi
if [ ! "$2" ]; then
	echo "Usage : xwine [gameDir] [exe]"
	exit
fi

X :2 -ac -terminate & nvidia-settings --load-config-only
sleep 10
DISPLAY=:2
pikakuvake "$1" "$2"
