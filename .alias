## Aliases ##

# More functionality by default
alias ls='ls++'                            # https://github.com/trapd00r/ls--
alias dir='dir -h --color=auto'
alias vdir='vdir -h --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias :w='echo sorry, but this isnt vim'
alias :wq=:w
alias :q="exit"
alias dm="man dwb"

# Directory aliases
alias dev="cd /media/Storage/Dev/"
alias projekti="cd /media/Storage/Dev/Projektit/Projekti/"
alias ogl="cd /media/Storage/Dev/Projektit/CFrameWork"
alias projektit="cd /media/Storage/Dev/projektit"

# Packer aliases
alias ai="pacaur -S -y"
alias as="pacaur -Ss"
alias au="pacaur -Syu"
alias ar="sudo pacman -Rsn"

# Clean garbage
alias cclean='rm -rf ~/.adobe/* ~/.macromedia/* ~/.icedteaplugin/*'

# Extrenal IP
alias extip='echo $(curl -s http://automation.whatismyip.com/n09230945.asp)'

# Cherokee weblog
alias weblog="cat /var/log/httpd/access_log | tail -15 | uniq | sort"

# Vim && Tmux
alias vimtux="tmux new-session -s VIMtux -d \"tmux set-option default-path $PWD\" \; source-file ~/.vimtux.conf \; attach"

# Final Fantasy XIV && WINE
alias ffxivcfg="WINEPREFIX=~/.FFXIV winecfg"
alias ffxivconfig="WINEPREFIX=~/.FFXIV wine C:/Program\ Files/SquareEnix/FINAL\ FANTASY\ XIV/ffxivconfig.exe"

alias macostart="(macopix --sockmsg ~/.config/macopix/L-Miku.mcpx &> /dev/null) &"
